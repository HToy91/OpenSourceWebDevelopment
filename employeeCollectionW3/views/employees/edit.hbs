<h1>Edit Employee</h1>

{{#if error}}
    <p class="error">{{error}}</p>
{{/if}}

<section class="card">
    <form action="/employees/{{employee._id}}?_method=PUT" method="POST">
        <label>
            First Name
            <input name="firstName" type="text" value="{{employee.firstName}}" required>
        </label>
        <br>
        <label>
            Last Name
            <input name="lastName" type="text" value="{{employee.lastName}}" required>
        </label>
        <br>
        <label>
            Department
            <select name="department" required>
                <option value="" disabled {{#unless employee.department}}selected{{/unless}}>Select a department</option>
                <option value="HR" {{#ifEquals employee.department "HR"}}selected{{/ifEquals}}>HR</option>
                <option value="Marketing" {{#ifEquals employee.department "Marketing"}}selected{{/ifEquals}}>Marketing</option>
                <option value="Sales" {{#ifEquals employee.department "Sales"}}selected{{/ifEquals}}>Sales</option>
            </select>
        </label>
        <br>
        <label>
            Start Date
            <input name="startDate" type="date" value="{{employee.startDate}}" required>
        </label>
        <br>
        <label>
            Job Title
            <input name="jobTitle" type="text" value="{{employee.jobTitle}}" required>
        </label>
        <br>
        <label>
            Salary
            <input name="salary" type="number" min="15" max="1000000" value="{{employee.salary}}" required>
        </label>
        <br>
        <button type="submit">Update Employee</button>
        <br>
        <a href="/">Cancel</a>
    </form>
</section>